{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs"
  },
  "exclude": [
    "node_modules"
  ]
}